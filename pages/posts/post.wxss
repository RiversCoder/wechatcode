page{background:#f8f8f8;}
.p-swiper{width:100%;height:400rpx;}
.p-swiper swiper-item image{width:100%;height:500rpx;}
.p-content{display:flex;flex-direction:column;margin-top:20rpx;margin-bottom:40rpx;background-color:#fff;border-bottom:1px solid #ededed;border-top:1px solid #ededed;padding-bottom:5px;}
