.pd-container{width:100%;}

.pd-headimg{position:relative;}
.pd-headimg .headImg{width:100%;height:450rpx;}
.pd-headimg .headImgIcon{width:103rpx;height:108rpx;vertical-align: middle;position:absolute;top:0;left:0;left:calc(50% - 51rpx);top:170rpx;}

.pd-headtext{display: flex;flex-direction:row;padding-left:33rpx;padding-top:14rpx;padding-bottom:36rpx;}
.pd-headtext .headAuthorImg{width:58rpx;height:58rpx;border-radius:50%;}
.pd-headtext .headAuthorName{font-size:28rpx;color:#666;padding:14rpx 22rpx 0 32rpx;}
.pd-headtext .headAuthorPubText{color:#a3a3a3;font-size:22rpx;padding-top:21rpx;}
.pd-headtext .headAuthorDate{color:#a3a3a3;font-size:22rpx;padding-top:19rpx;padding-left:22rpx;}

.pd-title{display:block;width:100%;box-sizing:border-box;font-size:34rpx;color:#4b556c;letter-spacing:6rpx;font-weight:bold;padding:0 36rpx 26rpx 42rpx;line-height:52rpx;margin:0 auto;}

.pd-share{width:100%;box-sizing:border-box;display:flex;flex-direction:row;padding:0 45rpx;justify-content:flex-end;position: relative;}
.pd-share .shareLine{width:calc(100% - 90rpx);height:1px;background:#e5e5e5;position:absolute;top:46rpx;left:45rpx;z-index:0;opacity:0.9;}
.pd-share image{width:90rpx;height:90rpx;position: relative;z-index:1;}
.pd-share image:nth-of-type(1){margin-right:30rpx;}

.pd-content{width:100%;display:block;box-sizing:border-box;padding:32rpx 30rpx 28rpx 30rpx;text-align:justify;line-height:43rpx;color:#666666;font-size:22rpx;}